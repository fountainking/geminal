{
  "name": "geminal",
  "version": "1.0.0",
  "description": "Two stars, one terminal. Borderless transparent terminal with draggable twin bounds.",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder"
  },
  "keywords": [
    "terminal",
    "electron",
    "transparent"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@electron/remote": "^2.1.3",
    "node-pty": "^1.0.0",
    "sharp": "^0.34.5",
    "xterm": "^5.3.0",
    "xterm-addon-fit": "^0.8.0"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^26.0.12"
  },
  "build": {
    "appId": "com.geminal.app",
    "productName": "Geminal",
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "build/icon.icns",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "dmg": {
      "title": "INSTALL Geminal!"
    },
    "files": [
      "**/*",
      "!**/*.ts",
      "!*.log",
      "!*.md",
      "node_modules/**/*"
    ],
    "asarUnpack": [
      "node_modules/node-pty/**/*"
    ],
    "directories": {
      "buildResources": "build"
    }
  }
}
